<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:padding="4dp"
    tools:context="com.pocket.chef.HomeActivity" >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_breakfastB"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="4dp"
        app:cardCornerRadius="4dp" >

        <Button
            android:id="@+id/breakfastB"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@mipmap/catbreakfastb_land"
            android:padding="8dp" />

    </android.support.v7.widget.CardView>
    
     <Space
         android:layout_width="8dp"
         android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_lunchB"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:padding="4dp"
        app:cardCornerRadius="4dp" >

        <Button
            android:id="@+id/lunchB"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_margin="4dp"
            android:background="@mipmap/catlunchb_land"
            android:padding="8dp" />

    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />
    
	<android.support.v7.widget.CardView
	    xmlns:card_view="http://schemas.android.com/apk/res-auto"
	    android:id="@+id/card_view_dinnerB"
	    android:layout_width="100dp"
	    android:layout_height="match_parent"
	    android:padding="4dp"
	    app:cardCornerRadius="4dp" >

        <Button
            android:id="@+id/dinnerB"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp"
            android:background="@mipmap/catdinnerb_land"
            android:padding="8dp" />

    </android.support.v7.widget.CardView>

</LinearLayout>